<log4net>
  <root>
    <level value="INFO" />
    <appender-ref ref="console" />
    <appender-ref ref="file" />
  </root>
  <appender name="console" type="MountainServer.Env.ConsoleColorAppender,MountainServer">
    <mapping>
      <level value="INFO" />
      <forecolor value="White" />
    </mapping>
    <mapping>
      <level value="WARN" />
      <forecolor value="Yellow" />
    </mapping>
    <mapping>
      <level value="ERROR" />
      <forecolor value="Red" />
    </mapping>
    <mapping>
      <level value="DEBUG" />
      <forecolor value="Blue" />
    </mapping>
    <layout type="log4net.Layout.PatternLayout">
      <converter>
        <name value="TaskName" />
        <type value="MountainServer.TaskNamePatternConverter,MountainServer" />
      </converter>
      <conversionPattern value="[%date{HH:mm:ss}] [%TaskName%level]: %message%newline" />
    </layout>
  </appender>
  <appender name="file" type="log4net.Appender.RollingFileAppender">
    <file value="myapp.log" />
    <appendToFile value="true" />
    <datePattern value="yyyy-MM-dd'.log'" />
    <rollingStyle value="Date" />
    <maxSizeRollBackups value="10" />
    <maximumFileSize value="10MB" />
    <staticLogFileName value="true" />
    <layout type="log4net.Layout.PatternLayout">
      <converter>
        <name value="TaskName" />
        <type value="MountainServer.TaskNamePatternConverter,MountainServer" />
      </converter>
      <conversionPattern value="[%date] [%TaskName%level]: %message%newline" />
    </layout>
  </appender>
</log4net>